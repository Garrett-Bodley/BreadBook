<% object.comments.each do |comment| %>
    <% if comment.valid? %>
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="block">
            <p class="subtitle"><%= comment.user.name %></p>
          </div>
          <div class="block">
            <div class="content">
              <p class="text"><%= comment.content %></p>
            </div>
          </div>
          <% if @current_user == comment.user %>
              <div class="buttons">
                <%= button_to "Edit Comment", edit_comment_path(comment), class: "button is-small is-link mx-2 my-1", method: :get %>
                <%= button_to "Delete Comment", comment, class: "button is-small is-danger my-1", method: :delete %>
              </div>
          <%end%>
        </div>
        <div class="media-right">
          <%= render partial: '/likes/likeable', locals: {parent: comment} %>
        </div>
      </article>
    </div>
    <% end %>
<% end %>