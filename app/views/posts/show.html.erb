<h2><%= @post.title %></h2>
<p><%= @post.bake.name %></p>
<ul>
  <% if @post.bake.steps.count > 0 %>
    <%= @post.bake.steps.each do |s| %>
      <%= link_to s.name, bake_step_path(@bake, s) %>
    <% end %>
  <% end %>
</ul>
<p><%= @post.content %></p>

<%= button_to "Edit Post", edit_post_path(@post), method: :get if @current_user == @post.user %>