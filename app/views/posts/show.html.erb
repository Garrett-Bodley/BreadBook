<div class="block"></div>
<div class="container">
  <div class="box">
    <article class="media">
      <div class="media-content">
        <div class="block">
          <p class="title"><%= @post.title %></p>
          <p><%= @post.bake.name %></p>
        </div>
        <% if @post.bake.steps.count > 0 %>
          <div class="block">
            <div class="content">
                <ul>
                  <% @post.bake.steps.each do |s| %>
                    <li><%= link_to s.action, bake_step_path(@post.bake, s) %></li>
                  <% end %>
                </ul>
            </div>
          </div>
        <% end %>
        <hr>
        <div class="block">
          <div class="content">
            <%= @post.content %>
          </div>
        </div>
        <div class="field is-grouped is-grouped-right">
          <div class="buttons">
            <%= render partial: '/bookmarks/bookmarkable', locals: {object: @post} %>
            <%= button_to "Edit Post", edit_post_path(@post), class: "button is-warning", method: :get if @current_user == @post.user %>
          </div>
        </div>
      </div>
    </article>
  </div>
<%= render partial: '/comments/comment_section', locals: {parent: @post, comment: @comment}  %>
