<%= form_for User.new, url: '/login', method: :post do |f| %>
  <div class="field has-addons">
    <p class="control is-expanded">
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: "input" %>
    </p>
  </div>
  <div class="field has-addons">
    <p class="control is-expanded">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, class: "input" %>
    </p>
  </div>
  <div class="field">
    <div class="buttons">
      <%= f.submit "Log In", class: "button is-link mx-1 my-1" %>
<% end %>
      <%= button_to 'Sign in with GitHub', '/auth/github', method: :post, class: "button is-link mx-1 my-1" %>
    </div>
  </div>